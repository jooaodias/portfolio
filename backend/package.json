{
  "name": "portfolio-blog-api",
  "version": "1.0.0",
  "description": "API REST para o blog do portfólio com Fastify",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/main.ts",
    "build": "tsup src/main.ts --format esm --outDir dist",
    "start": "node dist/main.js",
    "deploy": "npm run build && npm run db:migrate:deploy",
    "db:migrate": "prisma migrate dev --schema=src/infra/database/prisma/schema.prisma",
    "db:migrate:deploy": "prisma migrate deploy --schema=src/infra/database/prisma/schema.prisma",
    "db:studio": "prisma studio --schema=src/infra/database/prisma/schema.prisma",
    "db:seed": "tsx --env-file=.env src/infra/database/prisma/seed.ts",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "fastify",
    "blog",
    "api",
    "typescript"
  ],
  "author": "João Aleixo",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^10.0.2",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.4",
    "@prisma/client": "^6.4.1",
    "fastify": "^5.2.1",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "prisma": "^6.4.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
